@model IEnumerable<GestaoFacil.Dados.Modelos.Acao>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AcaoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AcaoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AcaoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
